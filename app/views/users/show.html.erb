<h1>Profile: <%= @user.username %></h1>

<div class='well'>
  <dl class='dl-horizontal'>
    <dt>Username:</dt>
    <dd><%= @user.username %></dd>
  </dl>
</div>

<h5> <%= @user.username %>'s activity</h5>

<ul class='nav nav-tabs'>
  <li class='<%= 'active' if params[:tab].nil? %>'>
    <%= link_to "Posts (#{@user.posts.size})", user_path(@user) %>
  </li>
  <li class='<%= 'active' if params[:tab] == 'comments' %>'>
    <%= link_to "Comments (#{@user.comments.size})", user_path(@user, tab: 'comments') %>
  </li>
</ul>

<% if params[:tab].nil? %>
  <% @user.posts.each do |post| %>
        <p>
          <% post.categories.each do |category| %>
              <%= render 'categories/category', category: category %>
          <% end %>
        </p>
        <p class='lead'>
          <%= post.title %>
        <hr/>
        </p>
        <p>
          <%= post.description %>
        <hr/>
        </p>
        <% end %>
<% elsif params[:tab] == 'comments' %>
        <% @user.comments.each do |comment| %>
            <div class='well span8'>
              <em>"<%= comment.body %>"</em>
              on <%= link_to comment.post.title, post_path(comment.post) %>
              </br>
              <span class='quiet'>by</span><%= comment.creator.username %>
              <small>at <%=comment.created_at%></small>
            </div>
        <% end %>
<% end %>